unit EdificiU;

interface

uses
  FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Error,
  FireDAC.UI.Intf,
  FireDAC.Phys.Intf,
  FireDAC.Phys.PG,
  FireDAC.Stan.Def,
  FireDAC.Stan.Pool,
  FireDAC.Stan.Async,
  FireDAC.Phys,
  FireDAC.Stan.Param,
  FireDAC.DatS,
  FireDAC.DApt.Intf,
  FireDAC.DApt,
  Data.DB,
  FireDAC.Comp.DataSet,
  FireDAC.Comp.Client, DbU, System.SysUtils;

type
  tEdifici = class
    constructor Create();
    destructor Destroy();
    function aggiungi(aNome: String): boolean;

  private
    fDB: tDB;
  end;

implementation

{ tEdificiU }

constructor tEdifici.Create;
begin

  inherited;
  fDB := tDB.Create();

end;

destructor tEdifici.Destroy;
begin

  fDB.Free;
  inherited;

end;

function tEdifici.aggiungi(aNome: String): boolean;
var
  lQuery: String;
  lFDQuery: TFDQuery;
begin

  result := false;

  try
    lQuery := 'INSERT INTO utente (nome) VALUES ('+ QuotedStr(aNome) + ')';

    lFDQuery := fDB.executeQuery(lQuery);

    if (lFDQuery.RowsAffected > 0) then
    begin

      result := true;

    end;

  finally

    lFDQuery.Free;

  end;
end;

end.
